{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.3.0",
    "private": true,
    "scripts": {
        "start": "nodemon",
        "build": "rimraf out && tsc --project tsconfig.app.json",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish",
        "lint:fix": "npm run lint -- --fix",
        "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test",
        "test:debug": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test --inspect-brk",
        "coverage": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' nyc mocha --config=.mocharc.json --node-env=test --exit"
    },
    "nyc": {
        "check-coverage": true,
        "branches": 80,
        "lines": 80,
        "functions": 80,
        "statements": 80,
        "per-file": true,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/index.ts",
            "app/server.ts",
            "app/app.ts"
        ],
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "reporter": [
            "html",
            "text"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    },
    "_moduleAliases": {
        "@app": "out/server/app",
        "@common": "out/common"
    },
    "dependencies": {
        "cookie-parser": "^1.4.7",
        "cors": "2.8.5",
        "express": "^4.21.1",
        "http-status-codes": "2.1.4",
        "module-alias": "2.2.2",
        "mongodb": "6.8.0",
        "prettier": "3.3.3",
        "reflect-metadata": "0.2.2",
        "rxjs": "^7.8.1",
        "save": "^2.9.0",
        "serve-favicon": "2.5.0",
        "socket.io": "^4.8.0",
        "socket.io-client": "^4.8.0",
        "swagger-jsdoc": "6.2.8",
        "swagger-ui-express": "5.0.0",
        "typedi": "0.10.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.19.2",
        "@types/chai": "4.3.16",
        "@types/cookie-parser": "1.4.7",
        "@types/cors": "2.8.17",
        "@types/express": "4.17.21",
        "@types/mocha": "10.0.7",
        "@types/node": "20.14.12",
        "@types/node-uuid": "0.0.32",
        "@types/sinon": "17.0.3",
        "@types/supertest": "2.0.12",
        "@types/swagger-jsdoc": "6.0.4",
        "@types/swagger-ui-express": "4.1.6",
        "@typescript-eslint/eslint-plugin": "7.17.0",
        "@typescript-eslint/parser": "7.17.0",
        "chai": "4.5.0",
        "cross-env": "7.0.3",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jsdoc": "46.4.6",
        "eslint-plugin-prettier": "5.0.0",
        "mocha": "10.7.0",
        "mongodb-memory-server": "^10.0.1",
        "nodemon": "3.1.4",
        "nyc": "17.0.0",
        "rimraf": "6.0.1",
        "sinon": "18.0.0",
        "source-map-support": "0.5.21",
        "supertest": "6.3.3",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.4.5"
    }
}
